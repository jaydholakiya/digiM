<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/colorAccent">

    <Spinner
        android:id="@+id/promotionsList"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selected"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/promotionsList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/promotionsList"
        app:layout_constraintTop_toBottomOf="@+id/promotionsList"/>

    <EditText
        android:id="@+id/urlLink"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/selected"
        app:layout_constraintHorizontal_bias="0.0"
        android:hint="Paste your social media URL..."
        app:layout_constraintStart_toStartOf="@+id/selected"
        app:layout_constraintTop_toBottomOf="@+id/selected" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:hint="Mobile No."
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/urlLink"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/urlLink"
        app:layout_constraintTop_toBottomOf="@+id/urlLink" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:text="Place Order"
        app:layout_constraintEnd_toEndOf="@+id/editText2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/editText2"/>

</androidx.constraintlayout.widget.ConstraintLayout>